.container.top-padding-med
  h1 ""
  h1 Courses
    .pull-right
      form.form-inline
        .form-group
          input.form-control(ng-model="searchText", placeholder="Search")
        .form-group.margin-left-med
          select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOptions")
  table.table.table-hover.table-striped.table-condensed
    thead
      tr
        th Title
        th Start Date
        th Cost
        th Course Description
      tbody
        tr(ng-repeat="course in courses | filter:searchText | orderBy:sortOrder")
          td {{course.name}}
          td {{course.startDate | date: 'EEEE, d MMM y'}}
          td {{course.cost |  currency}}
          td {{course.description}}
